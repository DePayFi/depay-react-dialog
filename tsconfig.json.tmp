{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "outDir": "dist",
    "types": ["cypress"],
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react",
    "rootDirs": ["src"],
    "removeComments": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*"]
}
